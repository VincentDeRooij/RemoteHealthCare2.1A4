<Controls:MetroWindow x:Class="RemoteHealthCare.Windows.ConnectDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHealthCare.Windows"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"

        WindowTitleBrush="{DynamicResource AppMainColor}"
        NonActiveWindowTitleBrush="{DynamicResource AppMainColor}"
        BorderBrush="{DynamicResource AppMainColor}"
        BorderThickness="1"
                      
        Background="{DynamicResource AppMainColor}"
        ResizeMode="NoResize"
                      
        WindowStartupLocation="CenterScreen"
        
        Title="Search &#38; Connect" Height="400" Width="300">
    <Grid>
        <ListBox x:Name="lbConnections" HorizontalContentAlignment="Stretch" Padding="0" Margin="0"/>
    </Grid>
</Controls:MetroWindow>
